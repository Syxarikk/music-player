{
  "name": "family-player-server",
  "version": "1.0.0",
  "description": "Media server for Family Player - handles YouTube downloads",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "npx ts-node index.ts",
    "build": "tsc",
    "install-ytdlp": "curl -L https://github.com/yt-dlp/yt-dlp/releases/latest/download/yt-dlp -o /usr/local/bin/yt-dlp && chmod a+rx /usr/local/bin/yt-dlp"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.0.0",
    "yt-dlp-wrap": "^2.3.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2"
  }
}
